<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
   <item android:left="2dp" android:right="2dp">
      <shape android:shape="rectangle">
            <stroke android:width="6dp" android:color="#FF000000" />
            <solid android:color="@color/transparent" />
        </shape>
   </item>
   
   <item android:top="6dp" >
      <shape android:shape="rectangle">
            <stroke android:width="6dp" android:color="#FF000000" />
            <solid android:color="@color/transparent" />
        </shape>
   </item>

   <item android:bottom="2dp" android:left="2dp" android:right="2dp"> 
      <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/transparent" />
            <gradient
                android:angle="90"
                android:centerColor="#FFDDDDDD"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#FFFFFFFF"
                android:startColor="#FFFFFFFF" />
        </shape>
   </item>

   <item android:bottom="6dp"> 
      <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/transparent" />
            <solid android:color="#00000000" />
        </shape>
   </item>
   

</layer-list>